! Reload this with “xrdb -merge .Xdefaults”.

XTerm*background: black
XTerm*foreground: grey
XTerm*pointerColor: SpringGreen
! No really, this should be the standard.
! XTerm*metaSendsEscape: true



! Fade out the text when terminal is not focused.
! Rxvt.fading: 30

! Tiny scroll bar at the right side.
Rxvt.scrollstyle: plain
Rxvt.scrollBar_right: true
! Do not scroll while in buffer, even on output, except if I press a key.
Rxvt.scrollTtyOutput: false
Rxvt.scrollWithBuffer: false
Rxvt.scrollTtyKeypress: true
! Huge scrollback buffer.
Rxvt.saveLines: 10000

! Make it old-school.
Rxvt.cursorBlink: true

! Open login shells.
Rxvt.loginShell: true

! Sorry Vim, 8th bit meta is just broken.
Rxvt.meta8: false

! Disable Perl extensions for now, I do not actively use them
! Rxvt.perl-ext:
! Rxvt.perl-ext-common:

! Colors!
Rxvt.cursorColor: SpringGreen
Rxvt.cursorColor2: black
Rxvt.pointerColor: SpringGreen
Rxvt.scrollColor: #8888AA
! 0: black, 1: red, 2: green, 3: yellow, 4: blue, 5: magenta, 6: cyan, 7: white
Rxvt.background: #000000
Rxvt.color0:     #000000
Rxvt.color8:     #666666
Rxvt.color1:     #9c0804
Rxvt.color9:     #e80e07
Rxvt.color2:     #5c991c
Rxvt.color10:    #7bcc25
Rxvt.color3:     #ffa929
Rxvt.color11:    #fff129
Rxvt.color4:     #003687
Rxvt.color12:    #0063f7
Rxvt.color5:     #4f0035
Rxvt.color13:    #cf008a
Rxvt.color6:     #06767a
Rxvt.color14:    #0abcc2
Rxvt.foreground: #bebebe
Rxvt.color7:     #bebebe
Rxvt.color15:    #ffffff

! Default font.
! Rxvt.font: -misc-fixed-medium-r-semicondensed-*-13-*-*-*-*-*-iso10646-*
! Rxvt.boldFont: -misc-fixed-bold-r-semicondensed-*-13-*-*-*-*-*-iso10646-*
! Rxvt.italicFont: -misc-fixed-medium-o-semicondensed-*-13-*-*-*-*-*-iso10646-*

! I need to work on a nice pattern.
URxvt.perl-ext: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
! URxvt.matcher.pattern.1: [\\w+-]+:\\/\\/
URxvt.colorUL: #4682B4

! The following settings currently do not work for whatever reason.
! Rxvt.shading: 50
! URxvt*inheritPixmap: true
! URxvt*tintColor: blue
! Rxvt*background: rgba:0000/0000/0000/bbbb
URxvt*termName:rxvt-256color
rxvt*modifier: alt

URxvt.urgentOnBell: True


URxvt.keysym.KP_Add:    +
URxvt.keysym.KP_Subtract: -
URxvt.keysym.KP_Multiply: *
URxvt.keysym.KP_Divide  : /
URxvt.keysym.KP_Decimal : .
URxvt.keysym.KP_Separator : ,
URxvt.keysym.KP_1:      1
URxvt.keysym.KP_2:      2
URxvt.keysym.KP_3:      3
URxvt.keysym.KP_4:      4
URxvt.keysym.KP_5:      5
URxvt.keysym.KP_6:      6
URxvt.keysym.KP_7:      7
URxvt.keysym.KP_8:      8
URxvt.keysym.KP_9:      9
URxvt.keysym.KP_0:      0
